{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "redshift:CreateClusterParameterGroup",
        "redshift:CreateTags",
        "redshift:CreateClusterSubnetGroup",
        "secretsmanager:CreateSecret",
        "secretsmanager:TagResource",
        "secretsmanager:DeleteSecret"
      ],
      "Resource": [
        "arn:aws:redshift:eu-west-1:215004874051:cluster:redshift*",
        "arn:aws:redshift:eu-west-1:215004874051:parametergroup:redshift-*",
        "arn:aws:redshift:eu-west-1:215004874051:subnetgroup:redshift-*",
        "arn:aws:secretsmanager:eu-west-1:215004874051:secret:AdminUserSecret-*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/ManagedBy": "BenchmarkingStack"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "redshift:CreateCluster",
        "redshift:ModifyCluster",
        "redshift:DeleteCluster",
        "redshift:ModifyClusterParameterGroup",
        "redshift:DeleteClusterParameterGroup",
        "redshift:DeleteClusterSubnetGroup",
        "secretsmanager:GetSecretValue",
        "secretsmanager:PutSecretValue",
        "ec2:DeleteSecurityGroup",
        "ec2:createTags"
      ],
      "Resource": [
        "arn:aws:redshift:eu-west-1:215004874051:cluster:redshift*",
        "arn:aws:redshift:eu-west-1:215004874051:parametergroup:redshift-*",
        "arn:aws:redshift:eu-west-1:215004874051:subnetgroup:redshift-*",
        "arn:aws:secretsmanager:eu-west-1:215004874051:secret:AdminUserSecret-*",
        "arn:aws:ec2:eu-west-1:215004874051:security-group/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetRandomPassword",
        "ec2:DescribeVpcs",
        "ec2:DescribeInternetGateways",
        "ec2:DescribeSubnets",
        "ec2:DescribeSecurityGroups",
        "ec2:CreateSecurityGroup",
        "ec2:AuthorizeSecurityGroupIngress",
        "redshift:DescribeClusters"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
}